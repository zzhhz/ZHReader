<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zzh.reader.view.BookView
        android:id="@+id/bookCover"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="46dp"
        android:src="@drawable/cover_default_new"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@+id/bookCover"
        android:layout_alignRight="@+id/bookCover"
        android:gravity="center"
        android:text=""/>

    <ImageButton
        android:id="@+id/item_close_Im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:layout_marginTop="36dp"
        android:visibility="gone"
        android:background="@drawable/item_close_button"/>
</RelativeLayout>